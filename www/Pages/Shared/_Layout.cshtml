<!DOCTYPE html>
<html lang="en">
@{
    @using www.Pages.Account.Extensions;
    var userId = Context.GetCurrentUserId();
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - www</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">СС</a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            @if (userId == 0)
                            {
                                <a class="nav-link text-dark" asp-page="/Account/Profile">Моя страница</a>
                            }
                            else
                            {
                                <a class="nav-link text-dark" asp-page="/Account/Profile" asp-route-id="@userId">Моя страница</a>
                            }
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Account/Friends">Друзья</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Account/Users">Люди</a>
                        </li>
                    </ul>
                </div>
                @if (userId != 0)
                {
                    <a class="nav-link" href="/Account/Logout">Выйти</a>
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
